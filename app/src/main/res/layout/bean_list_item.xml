<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:textSize="25dp"
            android:id="@+id/list_item_name"
            android:text="bean"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_name"
            android:id="@+id/id_semicolon"
            android:text="ID: "
            android:layout_marginLeft="15dp"
            />

        <View
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_toRightOf="@+id/id_semicolon"
            android:layout_below="@+id/list_item_name"
            android:id="@+id/id_placeholder"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/id_number"
            android:text="051ae164a31d9a24fa31fad138800fa2"
            android:layout_below="@+id/list_item_name"
            android:layout_toRightOf="@+id/id_placeholder" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Updated: "
            android:id="@+id/updated_colon"
            android:layout_below="@id/id_semicolon"
            android:layout_marginLeft="15dp"/>

        <View
            android:layout_width="5dp"
            android:layout_height="10dp"
            android:layout_toRightOf="@+id/updated_colon"
            android:id="@+id/ra_placeholder"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ra_placeholder"
            android:layout_below="@id/id_number"
            android:text="2016-09-23T04:39:13.257Z"
            android:id="@+id/updated"/>

    </RelativeLayout>
</LinearLayout>